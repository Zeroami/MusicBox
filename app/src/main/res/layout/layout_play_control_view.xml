<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="60dp"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/bg_transparent">
        
        <RelativeLayout 
            android:id="@+id/ly_music_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            
            <ImageView 
	            android:id="@+id/iv_bottom_music_album"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_centerVertical="true"
	            android:src="@drawable/icon_default_album"/>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_toRightOf="@id/iv_bottom_music_album"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:orientation="vertical">
	            
	            <TextView 
	              	android:id="@+id/tv_bottom_music_title"
	              	android:layout_width="100dp"
	              	android:layout_height="wrap_content"
	              	android:layout_marginTop="3dp"
	              	android:marqueeRepeatLimit="marquee_forever"
	              	android:singleLine="true"
	              	tools:text="可惜不是你可惜不是你可惜不是你"
	              	android:textColor="@color/default_text_color"
	              	android:textSize="14dp"/>
	            
	            <TextView 
	              	android:id="@+id/tv_bottom_music_artist"
	              	android:layout_width="100dp"
	              	android:layout_height="wrap_content"
	              	android:layout_marginTop="2dp"
	              	android:marqueeRepeatLimit="marquee_forever"
	              	android:singleLine="true"
	              	tools:text="梁静茹"
	              	android:textColor="@color/default_text_color"
	              	android:textSize="12dp"/>
	        </LinearLayout>
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <ImageView 
                android:id="@+id/iv_bottom_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_play"/>
            
            <ImageView 
                android:id="@+id/iv_bottom_next"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_next"/>
            
            <ImageView 
                android:id="@+id/iv_bottom_play_list"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_list_default"/>
        </LinearLayout>
</LinearLayout>
